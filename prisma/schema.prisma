// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  teenId    String   @unique
  pin       String
  balance   Float    @default(0)
  cardNumber String? @unique
  cvv       String?
  expiryDate String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sentTransactions     Transaction[] @relation("Sender")
  receivedTransactions Transaction[] @relation("Receiver")
  
  sentRequests     PaymentRequest[] @relation("RequestSender")
  receivedRequests PaymentRequest[] @relation("RequestReceiver")

  merchants        Merchant[]
  paymentOrders    PaymentOrder[]
}

model Transaction {
  id          String   @id @default(cuid())
  amount      Float
  description String?
  createdAt   DateTime @default(now())

  senderId    String
  sender      User     @relation("Sender", fields: [senderId], references: [id])

  receiverId  String
  receiver    User     @relation("Receiver", fields: [receiverId], references: [id])

  merchantName String?
}

model PaymentRequest {
  id          String   @id @default(cuid())
  amount      Float
  description String?
  status      String   @default("PENDING") // PENDING, PAID, REJECTED
  createdAt   DateTime @default(now())

  requesterId String
  requester   User     @relation("RequestSender", fields: [requesterId], references: [id])

  payerId     String
  payer       User     @relation("RequestReceiver", fields: [payerId], references: [id])

  merchantName String?
}

model Merchant {
  id          String   @id @default(cuid())
  name        String
  apiKey      String   @unique
  secretKey   String
  createdAt   DateTime @default(now())
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  orders      PaymentOrder[]
}

model PaymentOrder {
  id          String   @id @default(cuid())
  amount      Float
  currency    String   @default("INR")
  status      String   @default("CREATED") // CREATED, PAID, FAILED
  redirectUrl String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  merchantId  String
  merchant    Merchant @relation(fields: [merchantId], references: [id])

  payerId     String?
  payer       User?    @relation(fields: [payerId], references: [id])
}
